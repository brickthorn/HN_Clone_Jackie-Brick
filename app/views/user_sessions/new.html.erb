<% provide(:title, "Sign in") %>
<h1>JackerNews</h1>
<i><h2>Sign In</h2></i>


<% if flash.alert %>
  <%= flash.alert %>
<% end %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:user_sessions, url: user_sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>